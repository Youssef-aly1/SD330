<script>
    function dostartclock()
    {
        setInterval(doClockTick,1000);
    }

function doClockTick()
{
    var currentDate = new Date();
    var hours = currentDate.getHours();
    var mins = currentDate.getMinutes();
    var secs = currentDate.getSeconds();
    var timestring = hours+":"+mins+":"+secs;

    var outputElement = document.getElementById("timePar");
    outputElement.textContent=timestring;
}

function OnOff()
{
    var elem = document.getElementById("button1");
    if (elem.innerHTML=="Turn On") elem.innerHTML = "Turn Off";
    else elem.innerHTML = "Turn On";
}
function toggleDiv(value) 
{
	var divs = document.getElementsByClassName(value);
	for (var i = 0; i < divs.length; i++) {
		if (divs[i].style.display === "none") {
			divs[i].style.display = "block";
		} 
        else {
			divs[i].style.display = "none";
		}
	}
}
function playAudio() 
{
    var audio = document.getElementById("myAudio");
    audio.play();
}
var randomNumber = Math.floor(Math.random() * 31) + 40;
      
function updateNumber() 
{
    document.getElementById("random-number").innerHTML = "Current Temp: " + randomNumber + "Â°";
}
      
function increaseNumber() 
{
    if (randomNumber < 70) {
          randomNumber++;
          updateNumber();
    }
}
      
function decreaseNumber() 
{
    if (randomNumber > 40) {
          randomNumber--;
          updateNumber();
    }
}
      
window.onload = function() 
{
    updateNumber();
}

</script>
